<div class="center">
  <div class="row">
    <% @profiles.each do |profile| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(profile.user.image.url), profile %>
          <div class="caption">
            <h3><%= profile.user.id %></h3>
            <p><%= profile.expertise %></p>
            <p><%= "Seeking: #{profile.seeking}" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>








<h1>Listing profiles</h1>

<table>
  <thead>
    <tr>
      <th>Expertise</th>
      <th>Seeking</th>
      <th>Partner role</th>
      <th>About</th>
      <th>Experience</th>
      <th>Prefer age</th>
      <th>Equity type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.expertise %></td>
        <td><%= profile.seeking %></td>
        <td><%= profile.partner_role %></td>
        <td><%= profile.about %></td>
        <td><%= profile.experience %></td>
        <td><%= profile.prefer_age %></td>
        <td><%= profile.equity_type %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
