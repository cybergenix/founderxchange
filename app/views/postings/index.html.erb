<h1>Latest Postings</h1>

<table class="table table-striped table-bordered">
  
    <tr>
      <th>Type</th>
      <th>Title</th>
      <th>Compensation</th>
      <th>Pitch</th>
      <th colspan="3"></th>
    </tr>
  

 
    <% @postings.each do |posting| %>
      <tr>
        <td><%= posting.job_type %></td>
        <td><%= posting.title %></td>
        <td><%= posting.compensation %></td>
        <td><%= posting.pitch %></td>
        <td>
        <div class="btn-group">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
        <ul class="dropdown-menu" role="menu">
        <li><%= link_to 'Show', posting %></li>
        <li><%= link_to 'Edit', edit_posting_path(posting) %></li>
        <li><%= link_to 'Destroy', posting, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        </ul>
        </div>
        </td>
      </tr>
    <% end %>
  
</table>

<br>

<%= link_to 'New Posting', new_posting_path %>
