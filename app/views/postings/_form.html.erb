<%= simple_form_for(@posting) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :job_type %>
    <%= f.input :title %>
    <%= f.input :compensation %>
    <%= f.input :location %>
    <%= f.input :pitch %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
